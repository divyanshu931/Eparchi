<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">


        <ImageView
            android:id="@+id/reportPhoto"
            android:layout_width="156dp"
            android:layout_height="192dp"
            android:src="@drawable/gallery"
            app:civ_border_color="#000"
            app:civ_border_width="2dp"
             />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/reportPhoto"
            android:text="@string/date"
            android:textColor="#000"
            android:textSize="15dp"

            />

        <ImageView
            android:id="@+id/post"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_below="@+id/data"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/reportPhoto"
            android:src="@drawable/blood_test" />

        <TextView
            android:id="@+id/data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/reportPhoto"
            android:text="this is report info and data for examole---------------------------------------------------"
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/testinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/data"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/post"
            android:text="this is report info and data for history"
            android:textColor="#000"
            android:textSize="13dp" />

        <ImageView
            android:id="@+id/bill"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_below="@+id/post"
            android:layout_marginLeft="178dp"
            android:layout_marginTop="-1dp"
            android:layout_toRightOf="@+id/reportPhoto"
            android:src="@drawable/about" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
